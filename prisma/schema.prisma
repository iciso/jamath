generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          Role      @default(MEMBER)
  profile       Profile?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Profile {
  id            String    @id @default(cuid())
  userId        String    @unique
  phone         String?
  address       String?
  birthDate     DateTime?
  bloodGroup    String?
  user          User      @relation(fields: [userId], references: [id])
}

model IslamicEvent {
  id            String   @id @default(cuid())
  title         String
  title_ml      String?
  hijriDate     String
  gregorianDate DateTime
  type          EventType
  description   String?
  isAnnual      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([gregorianDate])
  @@index([type])
}

enum Role {
  MEMBER
  ADMIN
  PENDING
}

enum EventType {
  HIJRI_MONTH
  EID
  RAMADAN_START
  LAYLAT_AL_QADR
  COMMUNITY_EVENT
}